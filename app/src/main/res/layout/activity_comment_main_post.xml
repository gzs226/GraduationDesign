<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_header" />


    <TextView
        android:id="@+id/text_reply_postcomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/say_text_bg"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="回复XXX"
        android:textColor="@color/say_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_write_comment_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:padding="10dp"
        android:text="回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX"
        android:textColor="@color/text_item"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_reply_postcomment"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_editor_bg"
        android:gravity="top"
        android:hint="我想说..."
        android:padding="5dp"
        android:text=""
        android:textColor="@color/text_item"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button_reply_postcomment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="50dp"
        android:background="@drawable/search_enter"
        android:text="回复"
        android:textColor="@color/head_title_text"
        android:textSize="16sp" />
</LinearLayout>
