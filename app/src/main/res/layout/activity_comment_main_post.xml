<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f2f2f2"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/view_header"/>


    <TextView
        android:id="@+id/text_reply_postcomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#efecec"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="回复XXX"
        android:textColor="#c69f15"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/text_write_comment_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#f7f7f7"
        android:gravity="bottom"
        android:padding="10dp"
        android:text="回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX回复XXX"
        android:textColor="#505050"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/edit_reply_postcomment"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sort_show_sort"
        android:gravity="top"
        android:hint="我想说..."
        android:padding="5dp"
        android:text=""
        android:textColor="#4e4e4e"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/button_reply_postcomment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="50dp"
        android:background="@drawable/search_enter"
        android:text="回复"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

</LinearLayout>
