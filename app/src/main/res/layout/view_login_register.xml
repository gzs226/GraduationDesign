<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <EditText
        android:id="@+id/edit_login_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_editor_bg"
        android:gravity="center_vertical"
        android:hint="username"
        android:maxLines="1"
        android:paddingLeft="38dp"
        android:paddingRight="30dp"
        android:singleLine="true"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/image_editor_left"
        android:layout_width="30dp"
        android:layout_height="44dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="2dp"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:src="@drawable/login_user_icon" />

    <ImageView
        android:id="@+id/image_editor_right"
        android:layout_width="20dp"
        android:layout_height="44dp"
        android:layout_gravity="end"
        android:layout_marginRight="35dp"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:src="@drawable/edit_delete_icon"
        android:visibility="invisible" />
</FrameLayout>
