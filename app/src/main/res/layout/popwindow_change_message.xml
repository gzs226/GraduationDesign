<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/other_bg"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_pop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="我的学校"
            android:textColor="@color/but_dialog_frame"
            android:textSize="20sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/main_line" />

        <EditText
            android:id="@+id/edit_change_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/change_password_bg"
            android:gravity="center_horizontal"
            android:hint="请输入内容"
            android:lines="1"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:singleLine="true"
            android:textColor="@color/text_item_detail"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/main_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_pop_cancle"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/change_password_but_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="取消"
                android:textColor="@color/but_dialog_frame"
                android:textSize="16sp" />

            <View
                android:layout_width="80dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/text_pop_select"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/change_password_but_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="确认"
                android:textColor="@color/but_dialog_frame"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="2" />

</LinearLayout>
