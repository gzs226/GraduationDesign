<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/lin_question_bank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_lin_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_question_bank"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:padding="3dp"
                android:src="@drawable/homepage_bottom_question_database_press" />

            <TextView
                android:id="@+id/textview_question_bank"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="题库"
                android:textColor="@color/menu_text_press"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_social_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_lin_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_social_comment"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:padding="3dp"
                android:src="@drawable/homepage_bottom_circle_default" />

            <TextView
                android:id="@+id/textview_social_comment"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="社交"
                android:textColor="@color/menu_text_normal"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_user_information"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_lin_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_user_information"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:padding="3dp"
                android:src="@drawable/homepage_bottom_personal_center_default" />

            <TextView
                android:id="@+id/textview_user_information"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center"
                android:text="我"
                android:textColor="@color/menu_text_normal"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>