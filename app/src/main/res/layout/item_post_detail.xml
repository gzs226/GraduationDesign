<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_personal_item_bg"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/text_item_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:lines="1"
        android:singleLine="true"
        android:text="帖子的主题"
        android:textColor="@color/text_item"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.graduationdesign.tool.CircleImageView
            android:id="@+id/imageview_postdetail_usericon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/save_iamge" />

        <TextView
            android:id="@+id/textview_post_username"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:singleLine="true"
            android:text="用户昵称"
            android:textColor="@color/text_item_detail"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textview_post_writetime"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            android:text="2017-12-10"
            android:textColor="@color/text_item_detail"
            android:textSize="12sp" />

        <View
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="6dp"
            android:src="@drawable/askbar_pinglunicon" />

        <TextView
            android:id="@+id/textview_praise_munber"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/text_item_detail"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>
