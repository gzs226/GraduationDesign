<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.graduationdesign.tool.CircleImageView
            android:id="@+id/image_postdetail_usericon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/save_iamge"/>

        <TextView
            android:id="@+id/text_postdetail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/image_postdetail_usericon"
            android:text="用户昵称"
            android:textColor="#fc9517"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_postdetail_userschool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_postdetail_name"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/image_postdetail_usericon"
            android:text="用户学校"
            android:textColor="#bfbfbf"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/text_postdetail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_postdetail_name"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/text_postdetail_userschool"
            android:text="22小时前"
            android:textColor="#bfbfbf"
            android:textSize="12sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textview_post_title0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="标题："
            android:textColor="#4b4b4b"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_postdetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/textview_post_title0"
            android:text="这是题目"
            android:textColor="#4b4b4b"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_postdetail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_post_title0"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:minHeight="20dp"
            android:text="这是发布的内容"
            android:textColor="#737373"
            android:textSize="12sp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_margin="3dp"
            android:src="@drawable/askbar_pinglunicon"/>

        <TextView
            android:id="@+id/text_comment_munber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="12"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_margin="3dp"
            android:src="@drawable/askbar_no_dianzan"/>

        <TextView
            android:id="@+id/text_praise_munber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="8"
            android:textSize="12sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</LinearLayout>
