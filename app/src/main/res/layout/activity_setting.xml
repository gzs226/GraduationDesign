<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_header" />

    <LinearLayout
        android:id="@+id/lin_function_introduction"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="功能介绍"
            android:textColor="#3e3e3e"
            android:textSize="16sp" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_indicator_right2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_app_evaluate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="软件评分"
            android:textColor="#3e3e3e"
            android:textSize="16sp" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_indicator_right2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_feedback_message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="#3e3e3e"
            android:textSize="16sp" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_indicator_right2" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_app_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="版本更新"
            android:textColor="#3e3e3e"
            android:textSize="16sp" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_indicator_right2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_app_version"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="版本号 1.0.0"
            android:textColor="#3e3e3e"
            android:textSize="16sp" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_indicator_right2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_update_answer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="更新题库"
            android:textColor="#3e3e3e"
            android:textSize="16sp" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_indicator_right2" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#3e3e3e"
        android:textSize="16sp" />


</LinearLayout>
